<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proteinstore">
    <!-- adding internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProteinStore"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".inSetting.PrivacyAndPolicy"
            android:exported="false" />
        <activity
            android:name=".inSetting.ReferAndEarn"
            android:exported="false" />
        <activity
            android:name=".activities.CheackOutActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CartShoppingActivity"
            android:exported="false" />
        <activity
            android:name=".inSetting.DeleteAccount"
            android:exported="false" />
        <activity
            android:name=".inHome.BurnFatProduct"
            android:exported="false" />
        <activity
            android:name=".inSetting.AcountInfoActivity"
            android:exported="false" />
        <activity
            android:name=".fragments.FavouriteFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".fragments.KcalFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".fragments.SettingFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".inHome.Categoreis"
            android:exported="false" />
        <activity
            android:name=".fragments.HomeFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".activities.SignUp"
            android:exported="false" />
        <activity
            android:name=".activities.SignIn"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>